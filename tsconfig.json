{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@application/*": ["src/application/*"],
      "@kernel/*": ["src/kernel/*"],
      "@main/*": ["src/main/*"],
      "@shared/*": ["src/shared/*"],
    }
  }
}
